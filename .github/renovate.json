{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "timezone": "America/Chicago",
  "schedule": [
    "after 10pm and before 8am every weekday",
    "every weekend"
  ]
}
